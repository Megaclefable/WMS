/****** Script for SelectTopNRows command from SSMS  ******/
SELECT TOP (1000) [partition_id]
      ,[hobt_id]
      ,[column_id]
      ,[segment_id]
      ,[version]
      ,[encoding_type]
      ,[row_count]
      ,[has_nulls]
      ,[base_id]
      ,[magnitude]
      ,[primary_dictionary_id]
      ,[secondary_dictionary_id]
      ,[min_data_id]
      ,[max_data_id]
      ,[null_value]
      ,[on_disk_size]
  FROM [master].[sys].[column_store_segments]
