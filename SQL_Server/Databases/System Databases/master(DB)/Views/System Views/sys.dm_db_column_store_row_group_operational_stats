/****** Script for SelectTopNRows command from SSMS  ******/
SELECT TOP (1000) [object_id]
      ,[index_id]
      ,[partition_number]
      ,[row_group_id]
      ,[index_scan_count]
      ,[scan_count]
      ,[delete_buffer_scan_count]
      ,[row_group_lock_count]
      ,[row_group_lock_wait_count]
      ,[row_group_lock_wait_in_ms]
      ,[returned_row_count]
      ,[returned_aggregate_count]
      ,[returned_group_count]
      ,[input_groupby_row_count]
  FROM [master].[sys].[dm_db_column_store_row_group_operational_stats]
