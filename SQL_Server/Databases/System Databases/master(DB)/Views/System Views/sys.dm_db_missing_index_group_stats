/****** Script for SelectTopNRows command from SSMS  ******/
SELECT TOP (1000) [group_handle]
      ,[unique_compiles]
      ,[user_seeks]
      ,[user_scans]
      ,[last_user_seek]
      ,[last_user_scan]
      ,[avg_total_user_cost]
      ,[avg_user_impact]
      ,[system_seeks]
      ,[system_scans]
      ,[last_system_seek]
      ,[last_system_scan]
      ,[avg_total_system_cost]
      ,[avg_system_impact]
  FROM [master].[sys].[dm_db_missing_index_group_stats]
