/****** Script for SelectTopNRows command from SSMS  ******/
SELECT TOP (1000) [connection_id]
      ,[transport_stream_id]
      ,[state]
      ,[state_desc]
      ,[connect_time]
      ,[login_time]
      ,[authentication_method]
      ,[principal_name]
      ,[remote_user_name]
      ,[last_activity_time]
      ,[is_accept]
      ,[login_state]
      ,[login_state_desc]
      ,[peer_certificate_id]
      ,[encryption_algorithm]
      ,[encryption_algorithm_desc]
      ,[receives_posted]
      ,[is_receive_flow_controlled]
      ,[sends_posted]
      ,[is_send_flow_controlled]
      ,[total_bytes_sent]
      ,[total_bytes_received]
      ,[total_fragments_sent]
      ,[total_fragments_received]
      ,[total_sends]
      ,[total_receives]
      ,[peer_arbitration_id]
      ,[address]
  FROM [master].[sys].[dm_db_mirroring_connections]
